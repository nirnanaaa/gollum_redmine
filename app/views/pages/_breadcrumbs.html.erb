<div id="breadcrmb" <% if css_class%>class="<%=css_class%>"<%end%>>
  <ul class="breadcrumb <% if css_class %><%=css_class%> <%end%>">
    <%-x=path.split("/")%>
    <%x.each_with_index do |w,index|%>
      <%if first_is_root && index == 0 %>
        <li><%=link_to w.camelize,pages_root_path%></li>
      <%else%>
        <%if index == x.length-1 %>
          <li class="active"><%=w.camelize%></li>
        <%else%>
          <li><%=link_to w.camelize,show_folder_path(x[0..index].join("/"))%></li>
        <%end%>
      <%end%>
    <%end%>
  </ul>

</div>
